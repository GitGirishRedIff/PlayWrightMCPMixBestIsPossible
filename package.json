{
  "name": "mixbestispossible",
  "description": "BDD Testing Framework with Playwright and Cucumber referring multiple framework using MCP Copilot Claude Sonnet 3.5",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "test": "cross-env PLAYWRIGHT_HTML_REPORT=test-results/playwright-report cucumber-js",
    "test:smoke": "cross-env PLAYWRIGHT_HTML_REPORT=test-results/playwright-report cucumber-js --profile smoke",
    "test:regression": "cross-env PLAYWRIGHT_HTML_REPORT=test-results/playwright-report cucumber-js --profile regression",
    "test:parallel": "cross-env PLAYWRIGHT_HTML_REPORT=test-results/playwright-report cucumber-js --parallel 2",
    "report": "node scripts/merge-reports.js",
    "clean": "rimraf test-results",
    "pretest": "npm run clean",
    "posttest": "npm run report"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@cucumber/cucumber": "^12.1.0",
    "@cucumber/html-formatter": "^21.13.0",
    "@cucumber/pretty-formatter": "^2.0.1",
    "@playwright/test": "^1.54.1",
    "@types/cucumber": "^7.0.3",
    "@types/node": "^24.0.15",
    "cross-env": "^7.0.3",
    "cucumber-html-reporter": "^6.0.0",
    "dotenv": "^17.2.0",
    "multiple-cucumber-html-reporter": "^3.9.3",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}

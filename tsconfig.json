{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "types": [
      "node",
      "@cucumber/cucumber"
    ],
    "resolveJsonModule": true,
    "moduleResolution": "node"
  },
  "include": [
    "src/**/*",
    "features/**/*",
    "cucumber.js"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}